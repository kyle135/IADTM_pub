#------------------------------------------------------------------------------
# Ingredients
#------------------------------------------------------------------------------
UNITS := \
	BitWise \
	Logical \
	Unary

#------------------------------------------------------------------------------
# Recipes
#------------------------------------------------------------------------------
clean:
	$(foreach unit, $(UNITS), \
		make -C $(unit) clean; \
	)

all: clean
	$(foreach unit, $(UNITS), \
		make -C $(unit) command_line_simulation; \
	)
